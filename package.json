{
  "name": "@kaokei/use-vue-service",
  "version": "3.0.0",
  "type": "module",
  "description": "Lightweight Vue 3 state management with dependency injection, inspired by Angular services.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.cjs",
  "jsdelivr": "./dist/index.cjs",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "homepage": "https://github.com/kaokei/use-vue-service",
  "author": "kaokei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaokei/use-vue-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaokei/use-vue-service.git"
  },
  "keywords": [
    "angular",
    "vue",
    "service",
    "Ioc",
    "DI",
    "Dependency injection"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist/*",
    "public": "npm publish --access public",
    "postpublish": "git push origin --follow-tags",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version -r",
    "release:first": "standard-version --first-release"
  },
  "devDependencies": {
    "@kaokei/di": "^3.0.8",
    "@types/node": "^22.15.17",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^25.0.1",
    "standard-version": "^9.5.0",
    "typescript": "~5.6.3",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^2.1.9",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1"
}
